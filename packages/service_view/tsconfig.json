{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": ["ES6"],
        "sourceMap": true,
        "outDir": "./dist",
        // "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@fakelook/*": ["../*/src"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
